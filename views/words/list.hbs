<div class="row">
  <div class="col-md-8">
    {{>wikiwordPartial }}

  </div>
  <div class="col-md-4">
    <h2 class="mb-4">Index</h2>
    <ul class="list-group mt-2">
      {{#each words as |word| }}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <i>{{ this.type}}</i>
            <b style="text-align: right">{{ this.value }}</b>
            <i style="text-align: right" class='fas fa-plus'></i>
          </div>
        </li>
      {{/each}}
    </ul>        
  </div>
</div>
