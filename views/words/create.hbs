<form action="/words/create" method="post" class="col-4 mx-auto">
  <div class="form-group">
    <label for="typeOfWord">Type of word</label>
    <select class="form-control" id="typeOfWord">
      <option>Verb</option>
      <option>Adverb</option>
      <option>Adjective</option>
      <option>Noun</option>
      <option>Idiom</option>
      <option>Interjection</option>
    </select>
  </div>

  <div class="form-group">
    <label for="semanticDefinition">Define the word</label>
    <textarea class="form-control" id="definition" rows="3" placeholder="Scriptctus: brain stroke caused by unhandled errors"></textarea>
  </div>

  <div class="form-group">
    <label for="empathicEtymology">Empathic Definition</label>
    <textarea class="form-control" id="empathicEtymology" rows="3"placeholder="Explain your fucking emotions or the experience that led you to believe that this word is needed"></textarea>
  </div>

<div class="form-group">
    <label for="scopeOfUse">Scope of use</label>
    <select class="form-control" id="scopeOfUse">
      <option>Local (take my current location)</option>
      <option>Regional (take my current location)</option>
      <option>National (take my current location)</option>
      <option>Worldwide</option>
      <option>Other (please specify)</option>
    </select>
      <div class="form-group">
    <label for="otherScope">Scope of Use: Other (please specify)</label>
{{!-- TODO: should only be displayed if "Other" is selected on dropdown --}}
{{!--  --}}
    <textarea class="onlyIfOther" placeholder="IronHack" rows="1"></textarea>
      </div>
</div>

  <div class="form-group">
    <label for="style">Style</label>
    <select multiple class="form-control" id="style" aria-placeholder="When can we use it?">
      <option>General</option>
      <option>Formal</option>
      <option>Colloquial</option>
      <option>Vulgar</option>
      <option>Insult</option>
    </select>
  </div>
